  "license": "MIT",
  "scripts": {
    "dev": "nx serve-many --target=serve --projects=api,web --parallel",
    "auth-server": "npx nx run api:serve --configuration=development",
    "stub-auth": "node apps/api/src/stub-auth-server.js",
    "restart-all": "npm run cleanup && npx nx reset && rm -rf .nx/cache && npx nx build web && (npm run stub-auth & sleep 2 && cd dist/apps/web && npx http-server --port 4200 --spa)",
    "restart-real": "npm run cleanup && npx nx reset && rm -rf .nx/cache && NODE_ENV=development npx nx build api && npx nx build web && (NODE_ENV=development node dist/apps/api/main.js & sleep 2 && cd dist/apps/web && npx http-server --port 4200 --spa)",
    "start-api": "NODE_ENV=development node dist/apps/api/main.js",
    "cleanup": "npx kill-port 3333 4200 && killall node || true && pkill -f 'node' || true && lsof -ti:3333,4200 | xargs kill -9 2>/dev/null || true",
    "start-web": "npm run cleanup && cd dist/apps/web && npx http-server --port 4200 --spa",
    "build": "nx build",
    "test": "nx test",
    "lint": "nx run-many --target=lint --projects=api,web,mobile --parallel=true",
    "db:generate": "drizzle-kit generate --config=./drizzle.config.js",
    "db:migrate": "node apps/api/src/db/migrate.js",
    "db:studio": "drizzle-kit studio --config=./drizzle.config.js",
    "db:seed": "node apps/api/src/db/seed.js",
    "prepare": "husky",
    "format": "nx format:write",
    "format:check": "nx format:check"
  },
  "private": true,
